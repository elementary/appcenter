<?xml version="1.0" encoding="UTF-8"?>
<schemalist>
  <enum id="io.elementary.appcenter.windowstate">
    <value value="0" nick="normal"/>
    <value value="1" nick="maximized"/>
  </enum>
  <schema path="/io/elementary/appcenter/settings/" id="io.elementary.appcenter.settings">
    <key type="i" name="window-width">
      <default>1100</default>
      <summary>Window width</summary>
      <description>Window width</description>
    </key>
    <key type="i" name="window-height">
      <default>660</default>
      <summary>Window height</summary>
      <description>Window height</description>
    </key>
    <key type="i" name="window-x">
      <default>-1</default>
      <summary>Window X position</summary>
      <description>Window screen position on the X-axis</description>
    </key>
    <key type="i" name="window-y">
      <default>-1</default>
      <summary>Window Y position</summary>
      <description>Window screen position on the Y-axis</description>
    </key>
    <key enum="io.elementary.appcenter.windowstate" name="window-state">
      <default>'normal'</default>
      <summary>The saved state of the window</summary>
      <description>The saved state of the window</description>
    </key>
    <key type="b" name="developer-mode">
      <default>false</default>
      <summary>The user is a developer</summary>
      <description>Mode that allows the user to see more packages with development purposes</description>
    </key>
    <key type="b" name="reset-paid-apps">
      <default>true</default>
      <summary>Reset/rescan the paid apps list</summary>
      <description>Whether to clear the paid applications list and regenerate</description>
    </key>
    <key type="as" name="paid-apps">
      <default>[]</default>
      <summary>List of paid-for applications</summary>
      <description>A list of appstream IDs which have been paid for</description>
    </key>
  </schema>
</schemalist>
