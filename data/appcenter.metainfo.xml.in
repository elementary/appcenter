<component type="desktop-application">
  <id>io.elementary.appcenter</id>
  <launchable type="desktop-id">io.elementary.appcenter.desktop</launchable>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>GPL-3.0+</project_license>
  <compulsory_for_desktop>Pantheon</compulsory_for_desktop>

  <name>AppCenter</name>
  <summary>Browse and manage apps</summary>
  <description>
    <p>The open source, pay-what-you-want app store from elementary. Reviewed and curated by elementary to ensure a native, privacy-respecting, and secure experience. Browse by categories or search and discover new apps. AppCenter is also used for updating your system to the latest and greatest version for new features and fixes.</p>
  </description>

  <screenshots>
    <screenshot type="default">
        <caption>Discover new apps</caption>
      <image>https://raw.githubusercontent.com/elementary/appcenter/7.0.0/data/screenshot.png</image>
    </screenshot>
    <screenshot>
      <caption>Stay up to date</caption>
      <image>https://raw.githubusercontent.com/elementary/appcenter/7.0.0/data/screenshot-updates.png</image>
    </screenshot>
    <screenshot>
      <caption>Pay what you can to support developers</caption>
      <image>https://raw.githubusercontent.com/elementary/appcenter/7.0.0/data/screenshot-payment.png</image>
    </screenshot>
  </screenshots>

  <branding>
    <color type="primary">#7239b3</color>
  </branding>

  <content_rating type="oars-1.1">
    <content_attribute id="social-info">mild</content_attribute>
    <content_attribute id="money-purchasing">intense</content_attribute>
  </content_rating>

  <provides>
    <binary>io.elementary.appcenter</binary>
    <dbus type="user">io.elementary.AppCenter</dbus>
  </provides>

  <recommends>
    <display_length compare="ge">958</display_length>
  </recommends>
  <supports>
    <control>pointing</control>
    <control>keyboard</control>
    <control>touch</control>
  </supports>

  <url type="homepage">http://elementary.io/</url>
  <url type="bugtracker">https://github.com/elementary/appcenter/issues</url>
  <url type="donation">https://elementary.io/get-involved#funding</url>
  <url type="help">https://github.com/elementary/appcenter/discussions/categories/q-a</url>
  <url type="translate">https://l10n.elementary.io/projects/desktop/appcenter</url>

  <developer_name>elementary, Inc.</developer_name>
  <project_group>elementary</project_group>
  <update_contact>contact_at_elementary.io</update_contact>

  <releases>
    <release version="7.0.0" date="2023-01-24">
      <description>
        <p>New features:</p>
        <ul>
          <li>Install OS Updates offline</li>
        </ul>
        <p>Other Improvements:</p>
        <ul>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/appcenter/pull/1946">Fix showing addons in app info view</issue>
        <issue url="https://github.com/elementary/appcenter/issues/1953">Fix visual issues with category icons</issue>
        <issue url="https://github.com/elementary/appcenter/issues/1786">Don't show Flatpak runtimes as OS Updates</issue>
        <issue url="https://github.com/elementary/appcenter/issues/1310">Get Flatpak remote names from Title field</issue>
        <issue url="https://github.com/elementary/appcenter/issues/62">Warn when running in Demo Mode</issue>
        <issue url="https://github.com/elementary/appcenter/issues/1471">Make loading updates async from main window</issue>
      </issues>
    </release>

    <release version="4.0.0" date="2022-10-06">
      <description>
        <p>New features:</p>
        <ul>
          <li>Rewritten navigation with multitouch gestures to go back</li>
          <li>Recently updated apps are shown at the top of category views</li>
          <li>A status overlay bar is now shown when tasks are in progress</li>
        </ul>
        <p>App Info Page Improvements:</p>
        <ul>
          <li>Screenshot carousels fill the width of the window, showing more screenshots at once</li>
          <li>An app's accent color is now shown behind screenshots</li>
          <li>Get brand colors from the AppStream standard so more apps are supported</li>
          <li>Wrap links at the bottom pages instead of ellipsize</li>
          <li>Better dark style support</li>
        </ul>
        <p>Updates View Improvements:</p>
        <ul>
          <li>Release notes are shown in a dialog</li>
          <li>Better fallback icons for components</li>
          <li>The "Update All" header now sticks to the top of the window when scrolling</li>
        </ul>
        <p>Other Improvements:</p>
        <ul>
          <li>Redesigned "Fun &amp; Games" category card</li>
          <li>Performance improvements</li>
          <li>Stability improvements</li>
          <li>Updated translations</li>
        </ul>
      </description>
      <issues>
        <issue url="https://github.com/elementary/appcenter/issues/1923">Linked issue reports are now shown in release notes</issue>
        <issue url="https://github.com/elementary/appcenter/issues/1864">Wrap titles in app info pages instead of ellipsize</issue>
        <issue url="https://github.com/elementary/appcenter/issues/1578">Stop screenshots carousel from hijacking scrolling</issue>
      </issues>
    </release>

    <release version="3.10.0" date="2022-05-25" urgency="medium">
      <description>
        <p>New features:</p>
        <ul>
          <li>Added an option to automatically update apps</li>
          <li>Manually check for new updates</li>
          <li>Warn when apps are built against older runtimes</li>
        </ul>
        <p>Fixes:</p>
        <ul>
          <li>Prevent back button from disappearing or requiring multiple clicks</li>
        </ul>
        <p>Improvements:</p>
        <ul>
          <li>Don't show a warning dialog about apps from alt stores</li>
          <li>Show screenshot captions in a tooltip</li>
          <li>Show "Try for Free" when setting an app's price to 0</li>
          <li>Performance improvements</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="3.9.1" date="2021-12-10" urgency="medium">
      <description>
        <p>Fixes:</p>
        <ul>
          <li>Prevent potential crashes when updating</li>
        </ul>
        <p>Improvements:</p>
        <ul>
          <li>Link to Flathub's search page when no search results are found</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

    <release version="3.9.0" date="2021-11-23">
      <description>
        <p>Improvements:</p>
        <ul>
          <li>Amusements appear in the Games category</li>
          <li>Categories show as a grid instead of a list</li>
          <li>Allow window to shrink to much narrower sizes</li>
          <li>Updated translations</li>
        </ul>
      </description>
    </release>

